{% extends "base.jinja2" %}
{% block content %}
<ul class="forms">
    <li><div class="login container">
    <h1>Log in to your account.</h1>
    <form class="loginForm" method="GET" action="{{request.route_url('auth')}}">
          <input type="hidden" name="csrf_token" value="{{request.session.get_csrf_token()}}">
          <input class="username" name="username" type="text" placeholder="Username" required>
          <input class="password" name="password" type="password" placeholder="Password" required>
          <button type="submit">Login</button>
    </form>
  </div></li>
  <li><div class="register container">
    <h1>Register for an account.</h1>
    <form class="registerForm" method="POST" action="{{request.route_url('auth')}}">
          <input class="username" name="username" type="text" placeholder="Username" required>
          <input class="email" name="email" type="text" placeholder="Email Address" required>
          <input class="password" name="password" type="password" placeholder="Password" required>
          <button type="submit">Register</button>
    </form>
  </div></li>
</ul>
{% endblock content %}