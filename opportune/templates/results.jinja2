{% extends "base.jinja2" %}
{% block content %}
    <div class="banner">
    </div>
    <h1>Results</h1>
        {% for row in data %}
    <ul>
        <li>{{ row.job_title }}<br>
        {{ row.company }}<br>
        {{ row.location }}<br>
        {{ row.salary }}<br>
        {{ row.job_link }}<br></li>
    </ul>
        <br>
        {% endfor %}
<form class="download" action="{{request.route_url('search/results/download')}}">
  <input type="hidden" name="csrf_token" value="{{request.session.get_csrf_token()}}">
  <button>Download Results</button>
</form> 
<form class="sendEmail" action="{{request.route_url('search/results/email')}}" method="POST">
  <input type="hidden" name="csrf_token" value="{{request.session.get_csrf_token()}}">
  <button>Email Results</button>
</form> 
{% endblock content %}
